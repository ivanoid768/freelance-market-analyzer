{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["ES2018", "ESNext.AsyncIterable"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "build"]
}